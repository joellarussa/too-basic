<!-- sections/announcement-bar.liquid -->
<div
  class="announcement-bar"
  role="region"
  aria-label="Announcement"
  style="background-color: {{ section.settings.background_color }}; color: {{ section.settings.text_color }};"
>
  {% if section.blocks[0].settings.text != blank %}
    {% if section.blocks[0].settings.link != blank %}
      <a
        href="{{ section.blocks[0].settings.link }}"
        class="announcement-bar__link"
        style="color: {{ section.settings.text_color }};"
      >
    {% endif %}
    <p class="announcement-bar__message">
      {{ section.blocks[0].settings.text | escape }}
    </p>
    {% if section.blocks[0].settings.link != blank %}
      </a>
    {% endif %}
  {% endif %}
</div>

{% schema %}
{
  "name": "Announcement Bar",
  "settings": [
    {
      "type": "color",
      "id": "background_color",
      "label": "Background Color",
      "default": "#f0f0f0"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text Color",
      "default": "#333333"
    }
  ],
  "blocks": [
    {
      "type": "announcement",
      "name": "Announcement",
      "settings": [
        {
          "type": "text",
          "id": "text",
          "default": "Welcome to our store",
          "label": "Text"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Default",
      "blocks": [
        {
          "type": "announcement"
        }
      ]
    }
  ]
}
{% endschema %}
